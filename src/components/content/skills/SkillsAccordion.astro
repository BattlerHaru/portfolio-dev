---
import "@css/SkillsAccordion.css";
import Skills from "@/components/content/skills/Skills.astro";
import StarsFilledIcon from "@icons/sections/StarsFilled.astro";
---

<div
  class="skill-accordion text-[--txt-color-1] border-2 border-[--bg-color-3] hover:border-[--txt-color-3] rounded-lg px-4 pb-4"
>
  <input
    class="opacity-0 skill-accordion-input"
    type="checkbox"
    id="skills-accordion-input"
    checked
  />
  <label
    for="skills-accordion-input"
    class="flex
            relative
            text-[--txt-color-3]
            text-4xl
            cursor-pointer
            justify-between
            transition-all duration-350
            mr-8"
    ><h2
      class="flex items-center gap-x-3 text-3xl font-semibold text-[--txt-color-1]"
    >
      <StarsFilledIcon class="size-7" />
      Skills
    </h2>
    <span
      class="absolute -right-2 -top-1 rotate-90 skill-accordion-arrow origin-center text-[--bg-color-3]"
      >&#x276F;</span
    ></label
  >
  <div
    class="skill-accordion-content transition-all duration-350 overflow-hidden max-h-0"
  >
    <Skills />
  </div>
</div>
<script src="/src/scripts/SkillsAccordion.ts"></script>
